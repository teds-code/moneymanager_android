<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="sync.enable"
        android:summary="@string/pref_description_sync_enable"
        android:title="@string/pref_title_sync_enable" />
    <EditTextPreference
        android:key="sync.url"
        android:summary="@string/pref_description_sync_url"
        android:title="@string/pref_title_sync_url"
        android:inputType="textUri"/>
    <SwitchPreference
        android:defaultValue="false"
        android:key="debug.enable"
        android:summary="@string/pref_description_debug"
        android:title="@string/pref_title_debug"/>
</PreferenceScreen>
